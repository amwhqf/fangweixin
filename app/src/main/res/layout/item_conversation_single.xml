<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_message"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <RelativeLayout
        android:id="@+id/re_message_containe"
        android:layout_width="72dp"
        android:layout_height="64dp">
        <ImageView
            android:id="@+id/re_message_containe_ravatar"
            android:layout_marginLeft="2dp"
            android:src="@drawable/default_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/re_message_unreadmun"
            android:text="5"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/unread_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/re_message_group_tag"
            android:text="ç¾¤"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/re_message_name"
        android:text="name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/re_message_containe"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="#353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/re_message_time"
        android:text="time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:text="message"
        android:id="@+id/re_message_msg"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/re_message_containe"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>